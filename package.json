{
  "name": "release-me",
  "version": "0.0.1",
  "private": false,
  "description": "GitHub Release Management",
  "author": "Kevin de Jong",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/dev-build-deploy/release-me",
  "keywords": [
    "github",
    "action",
    "releases"
  ],
  "bugs": {
    "url": "https://github.com/dev-build-deploy/release-me/issues"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:assets": "ncc build -o lib/assets src/entrypoints/assets.ts",
    "build:get": "ncc build -o lib/get src/entrypoints/get.ts",
    "build:main": "ncc build -o lib/main src/entrypoints/main.ts",
    "test": "jest --coverage",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write **/*.ts"
  },
  "dependencies": {
    "@actions/artifact": "^1",
    "@actions/core": ">=1.10.1",
    "@actions/github": ">=6.0.0",
    "@dev-build-deploy/commit-it": ">=1.0.4",
    "@dev-build-deploy/version-it": ">=0.3.0",
    "yaml": ">=2.3.4"
  },
  "devDependencies": {
    "@octokit/openapi-types": ">=19",
    "@tsconfig/node20": "^20",
    "@types/jest": ">=29",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": ">=6",
    "@typescript-eslint/parser": ">=7",
    "@vercel/ncc": ">=0",
    "eslint": ">=8",
    "eslint-import-resolver-typescript": ">=3",
    "eslint-plugin-import": ">=2",
    "eslint-plugin-jest": ">=27",
    "jest": ">=29",
    "npm-run-all2": ">=6",
    "prettier": ">=3",
    "ts-jest": ">=29",
    "typescript": ">=5"
  },
  "engines": {
    "node": ">=20"
  }
}
